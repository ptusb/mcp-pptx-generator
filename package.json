{
  "name": "pptxgenjs-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for PptxGenJS - Create PowerPoint presentations via LLM",
  "type": "module",
  "bin": {
    "pptxgenjs-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsx src/index.ts",
    "prepare": "npm run build",
    "inspector": "npx @modelcontextprotocol/inspector dist/index.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "pptx",
    "powerpoint",
    "presentation",
    "pptxgenjs",
    "llm",
    "ai"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "pptxgenjs": "^4.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
